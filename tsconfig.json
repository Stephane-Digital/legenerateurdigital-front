{
  "compilerOptions": {
    "target": "es2019",
    "lib": ["dom", "es2019"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "jsx": "preserve",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@/app/*": ["app/*"],
      "@/lib/*": ["lib/*"]
    },
    "types": ["node"]
  }
}
